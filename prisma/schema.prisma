generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  name          String
  email         String         @unique
  password      String
  role          Role           @default(USER)
  division      Division
  profileImage  String?        @db.Text
  archives      Archive[]
  notifications Notification[]
  createdAt     DateTime       @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // ARCHIVE_CREATED, ARCHIVE_UPDATED, ARCHIVE_DELETED, INFO
  title     String
  message   String
  isRead    Boolean  @default(false)
  link      String?
  createdAt DateTime @default(now())

  @@index([userId, isRead])
}

model Archive {
  id            String        @id @default(uuid())
  archiveNumber String
  title         String
  letterNumber  String
  date          DateTime
  division      Division
  status        ArchiveStatus @default(AKTIF)
  description   String?
  fileUrl       String?
  fileId        String?
  createdBy     String
  user          User          @relation(fields: [createdBy], references: [id])
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Arsip Aktif specific fields
  noBerkas          String?   // No Berkas (shared: Aktif & Inaktif)
  noUrut            String?   // No Urut (Aktif only)
  kode              String?   // Kode (Aktif only)
  indexPekerjaan    String?   // Index / Pekerjaan (Aktif only)
  uraianMasalah     String?   @db.Text // Uraian Masalah / Kegiatan (Aktif only)
  tahun             String?   // Tahun (Aktif only)
  jumlahBerkas      String?   // Jumlah Berkas (shared: Aktif & Inaktif)
  keteranganAsliCopy String?  // Keterangan: Asli/Copy (shared: Aktif & Inaktif)
  keteranganBox     String?   // Keterangan: Box (shared: Aktif & Inaktif)

  // Arsip Inaktif specific fields
  noItem            String?   // No. Item (Inaktif only)
  kodeKlasifikasi   String?   // Kode Klasifikasi (Inaktif only)
  indeks            String?   // Indeks (Inaktif only)
  uraianInformasi   String?   @db.Text // Uraian Informasi (Inaktif only)
  kurunWaktu        String?   // Kurun Waktu (Inaktif only)
  keteranganSKKAAD  String?   // Keterangan: SKKAAD (Inaktif only)
}

model StorageConfig {
  id           String   @id @default(uuid())
  provider     String
  accessToken  String
  refreshToken String
  expiresAt    DateTime?
  isActive     Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  SUPER_ADMIN
  ADMIN
  USER
}

enum Division {
  KEUANGAN
  PENYELENGGARA
  TATA_USAHA
  UMUM
}

enum ArchiveStatus {
  AKTIF
  INAKTIF
}
